@model MovieStore.Models.Article

<div class="col-lg-4 col-md-6 portfolio-item filter-@(Model.ArticleTypeId)">
    <div class="portfolio-wrap">
        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <img src="@Model.Image" class="img-fluid" alt="">
        }
        else
        {
            <img src="/assets/img/portfolio/portfolio-1.jpg" class="img-fluid" alt="">
        }
        <div class="portfolio-info">
            <h4>@Model.Name</h4>
            <p>@(Model.ArticleType?.Name)</p>
            <div class="portfolio-links">
                @* <a href="portfolio-details.html" title="More Details"><i class="bi bi-link"></i></a> *@
                <form id="@Model.ArticleId" asp-controller="Cart" asp-action="Post" method="post">
                    <input type="hidden" asp-for="ArticleId" />
                    <a href="#" onclick="this.closest('form').submit();return false;" title="Add to Cart"><i class="bi bi-cart"></i></a>
                </form>
            </div>
        </div>
    </div>
</div>
