@model IEnumerable<MovieStore.Models.Order>

@{
    bool canCancel = !Model.Any(x => x.Shipped);
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Line1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiftWrap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shipped)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Canceled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>
            @if(canCancel)
            {
                <th></th>
            }
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Line1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiftWrap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shipped)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Canceled)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
                @if(canCancel)
                {
                    <td class="lower-padding">
                        <div class="d-flex">
                            @if(!item.Canceled)
                            {
                                <form method="post" asp-action="Cancel" asp-controller="Order" class="p-2">
                                    <input type="hidden" name="OrderId" value="@item.OrderId" />
                                    <a href="#" type="submit"><i class="fa fa-trash"></i></a>
                                </form>

                                <a href="/Order/Edit/@item.OrderId" class="p-2"><i class="fa fa-pen"></i></a>
                            
                                <form method="post" asp-action="ReturnToCart" asp-controller="Order" class="p-2">
                                    <input type="hidden" name="OrderId" value="@item.OrderId" />
                                    <a href="#" type="submit"><i class="fa fa-shopping-cart"></i></a>
                                </form>
                            }
                        </div>
                    </td>
                }
            </tr>
}
    </tbody>
</table>
